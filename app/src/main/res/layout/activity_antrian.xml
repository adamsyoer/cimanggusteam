<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#70B9F8"
    tools:context=".AntrianActivity">

    <include
        android:id="@+id/antrian_toolbar"
        layout="@layout/app_bar_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/motor" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/moge" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/mobil" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/stateRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="Motor"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_weight="1"
                android:text="Moge"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_weight="1"
                android:text="Mobil"
                android:textSize="18sp" />


        </RadioGroup>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Catatan"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_catatan"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginBottom="286dp"
            android:ems="10"
            android:inputType="textMultiLine" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">


        <EditText
            android:id="@+id/editText_platkendaraan"
            android:layout_width="match_parent"
            android:maxLength="11"
            android:layout_height="50dp"
            android:hint="Plat nomor kendaraan"
            android:textColorHint="#061012" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pesan Antrian"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*Cek riwayat antrian sebelum pesan antrian."
            android:textStyle="bold"
            android:textSize="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*Plat kendaraan harus sesuai dengan yang di daftarkan.."
            android:textStyle="bold"
            android:textSize="12dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/jama"
            android:layout_width="99dp"
            android:layout_height="58dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/btnantrianstyle"
            android:text="09.00" />

        <Button
            android:id="@+id/jamb"
            android:layout_width="112dp"
            android:layout_height="58dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/btnantrianstyle"
            android:text="10.00" />

        <Button
            android:id="@+id/jamc"
            android:layout_width="112dp"
            android:layout_height="58dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/btnantrianstyle"
            android:text="11.00" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/jamd"
            android:layout_width="99dp"
            android:layout_height="58dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/btnantrianstyle"
            android:text="12.00" />

        <Button
            android:id="@+id/jame"
            android:layout_width="112dp"
            android:layout_height="58dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/btnantrianstyle"
            android:text="13.00" />

        <Button
            android:id="@+id/jamf"
            android:layout_width="111dp"
            android:layout_height="58dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/btnantrianstyle"
            android:text="14.00" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/jamg"
            android:layout_width="102dp"
            android:layout_height="58dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/btnantrianstyle"
            android:text="15.00" />

        <Button
            android:id="@+id/jamh"
            android:layout_width="111dp"
            android:layout_height="58dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/btnantrianstyle"
            android:text="16.00" />

        <Button
            android:id="@+id/jami"
            android:layout_width="108dp"
            android:layout_height="58dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/btnantrianstyle"
            android:text="17.00" />

    </LinearLayout>


</LinearLayout>