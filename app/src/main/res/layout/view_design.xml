<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#70B9F8"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/gambar_motor"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="2.5"
        app:srcCompat="@drawable/motor"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/gambar_moge"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="2.5"
        app:srcCompat="@drawable/moge"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/gambar_mobil"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="2.5"
        app:srcCompat="@drawable/mobil"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="6dp">

        <TextView
            android:id="@+id/no_antrian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="No. Antrian :"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jenis_kendaraan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Jenis kendaraan :" />

        <TextView
            android:id="@+id/plat_kendaraan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Plat Kendaraan :" />

        <TextView
            android:id="@+id/waktu_steam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Waktu Steam :" />

    </LinearLayout>

</LinearLayout>